package Programmers0531;

public class Programmers0531 {
public static void main(String[] args) {
	String answer = "";
	String s = "try hello world";
	int ascii = 0;
	
	for(int i=0;i<s.length();i++) {
		if(i%2==0) {
			if(s.charAt(i)==' ') {
				answer+=s.charAt(i);
			}
			else {
				ascii = s.charAt(i);
				answer += (char)(ascii-32);
			}
		}
		else {
			answer += s.charAt(i);
		}
	}
	
	
	System.out.println(answer);
	}
}
